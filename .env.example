# Metaphysical Scene Weaver Environment Variables

# API Configuration
SEMANTEST_API_URL=https://api.semantest.com/v1
SEMANTEST_API_KEY=your_api_key_here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
API_PREFIX=/api/v1

# Security
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost/metaphysical_scene_weaver

# External Services
OPENAI_API_KEY=your_openai_key_here  # Optional for enhanced analysis
ANTHROPIC_API_KEY=your_anthropic_key_here  # Optional for enhanced analysis

# Development
DEBUG=false
LOG_LEVEL=INFO
MOCK_EXTERNAL_APIS=false

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_WORKERS=4
BATCH_SIZE=10

# File Paths (override defaults if needed)
# SCRIPTS_PATH=/custom/path/to/scripts
# OUTPUT_PATH=/custom/path/to/output
# CONTENT_PATH=/custom/path/to/content

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_BATCH_PROCESSING=true
ENABLE_QUALITY_VALIDATION=true
ENABLE_NARRATOR_VOICES=true

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090